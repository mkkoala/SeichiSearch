<h2>新規登録</h2>

<% if @mecca.errors.any? %>
    <div id="error_explanation">
      <h2><%= @mecca.errors.count %> errors prohibited this obj from being saved:</h2>
      <ul>
      <% @mecca.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
<% end %>

<%= form_for(@mecca) do |f| %>

	<%= f.attachment_field :mecca_image %>

	<h4>場所名</h4>
	<%= f.text_field :name %>

	<h4>説明</h4>
	<%= f.text_area :body %>

	<h4>映画タグ</h4>
	<%= f.collection_check_boxes :movie_tag_ids, MovieTag.all, :id, :title %>

	<h4>郵便番号</h4>
	<%= f.text_field :post_code, :size=>"15" %>

	<h4>住所</h4>
	<%= f.text_field :address, :size=>"60" %>

	<br>
	<br>

	<p>※画像や文章を他者から引用した場合は引用元の情報を記載してください</p>
	<%= f.submit '新規登録' %>

<% end %>