<h2>プロフィール編集</h2>

<%= form_for(@user) do |f| %>

<%= render 'layouts/error_messages', model: f.object %>

<table class="table">
	<tr>
		<tr>プロフィール画像</tr>
		<th><%= f.attachment_field :profile_image %>
		</th>
	</tr>

	<tr>
		<th>名前</th>
		<th><%= f.text_field :name %></th>
	</tr>

</table>

<div class="actions">
	<%= f.submit "編集内容を保存する", :id => "submit_button" %>
</div>

<% end %>