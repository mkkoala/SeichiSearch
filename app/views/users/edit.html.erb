<h2>プロフィール編集</h2>

<%= form_for(@user) do |f| %>

<!-- エラーメッセージ表示-->
<% if @user.errors.any? %>
	<h3><%= @user.errors.count %>error occurrence</h3>
	<ul>
		<% @user.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>
<!-- エラーメッセージ表示-->
<table class="table">
	<tr>
		<tr>プロフィール画像</tr>
		<th><%= f.attachment_field :profile_image %>
		</th>
	</tr>

	<tr>
		<th>名前</th>
		<th><%= f.text_field :name %></th>
	</tr>

</table>

<div class="actions">
	<%= f.submit "編集内容を保存する" %>
</div>

<% end %>