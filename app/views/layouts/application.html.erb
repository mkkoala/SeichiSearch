  </head>

  <body>
    <%= render 'layouts/header' %>

    <div class='body'>
      <div class='container'>

        <p id="notice"><%= notice %></p>

        <%= yield %>

      </div>
    </div>

    <%= render 'layouts/footer' %>

  </body>
</html>
